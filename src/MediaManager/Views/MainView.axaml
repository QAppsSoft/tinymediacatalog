<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:MediaManager.Views"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MediaManager.Views.MainView">
    <Grid ColumnDefinitions="Auto *" RowDefinitions="30 *">

        <!-- Title Bar -->
        <views:TitleBar Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" />

        <!-- Left Pane -->
        <views:LeftPane Grid.Column="0" Grid.Row="1" MinWidth="50" />

        <!-- Right Pane -->
        <views:RightPane Grid.Column="1" Grid.Row="1" />
    </Grid>
</UserControl>
