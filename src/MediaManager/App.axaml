<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:styling="clr-namespace:FluentAvalonia.Styling;assembly=FluentAvalonia"
             xmlns:mediaManager="clr-namespace:MediaManager"
             x:Class="MediaManager.App"
             RequestedThemeVariant="Default">

    <Application.Resources>
        <ResourceDictionary>
            <mediaManager:Composition x:Key="Composition" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="Styles/MainMenuIcons.axaml" />    
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

    <Application.Styles>
        <styling:FluentAvaloniaTheme PreferSystemTheme="True" PreferUserAccentColor="True" />
    </Application.Styles>
</Application>